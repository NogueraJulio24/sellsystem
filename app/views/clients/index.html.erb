
<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table class="highlight">
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Document</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Smartphone</th>
      <th>Address</th>
      <th>Date of birth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.lastname %></td>
        <td><%= client.document %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <td><%= client.smartphone %></td>
        <td><%= client.address %></td>
        <td><%= client.date_of_birth %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path, {:remote => true, :class => 'btn modal-trigger', 'data-target' => '#client-modal'} %>
